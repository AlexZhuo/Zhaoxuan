<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.alex.zhaoxuan.MainActivity">

    <TextView
        android:id="@+id/ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="21sp"

        android:text="服务器IP地址" />
    <EditText
        android:id="@+id/ipAddress"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="120.24.231.67"
        android:layout_toRightOf="@id/ip"
        />

    <TextView
        android:id="@+id/tv_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="21sp"
        android:layout_below="@id/ip"
        android:text="端口" />
    <EditText
        android:id="@+id/et_port"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@id/tv_port"
        android:text="8080"

        android:layout_toRightOf="@id/tv_port"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="21sp"
        android:layout_below="@id/tv_port"
        android:text="我的名称" />
    <EditText
        android:id="@+id/et_name"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@id/tv_name"
        android:text=""
        android:layout_toRightOf="@id/tv_name"
        />

    <TextView
        android:id="@+id/tv_status"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="50dp"
        android:text="请先测试服务器"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/btn_test"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="测试服务器"
        />
    <Button
        android:id="@+id/btn_map"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:text="开启地图"
        />
</RelativeLayout>
